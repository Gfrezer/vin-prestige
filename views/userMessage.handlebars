<div class="container-fluid">
    <div class="fondHautDePage">
        <div class="row">
            <div class="col-md-3">
                {{>logo}}
            </div>
            <div class="col-md-9">
                {{>navbar}}
            </div>
        </div>
    </div>
</div>


<div class="compteUtilisateur">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h1>Mon compte Message</h1>
                        <div class="error-list">
                            {{#each errors}}
                            <li class="error">{{this}}</li>
                            {{/each}}
                        </div>
                        <form method="POST" action="/user/userMessage/{{user.id}}" enctype="multipart/form-data">
                            <div class="form-group ">
                                <label>Contenu</label>
                                <textarea type="text" class="form-control" name="content" onkeyup="textLimit(this, 10)"
                                    placeholder="content"></textarea>
                            </div>

                            <div class="form-group ">
                                <label>photo</label>
                                <input type="file" class="form-control" name="photo" placeholder="photo">
                            </div>

                            <div class="form-group ">
                                <label>auteur</label>
                                <input type="text" class="form-control" name="author" value="{{user.name}}">
                            </div>

                            <div class="form-group ">
                                <label>createDate</label>
                                <input type="date" class="form-control" name="createDate" placeholder="createDate">
                            </div>
                            <button type="submit" class="btn_message_post">Validez</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>