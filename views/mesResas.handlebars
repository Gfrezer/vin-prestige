<div class="container-fluid">
    <div class="fondHautDePage">
        <div class="row">
            <div class="col-md-3">
                {{>logo}}
            </div>
            <div class="col-md-9">
                {{>navbar}}
            </div>
        </div>
    </div>
</div>
{{>logoPartenaires}}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="titreSection">
                <h2 id="produits">Mes Réservations</h2>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="photo_vigne">
                <div class="container-de-fond">
                    <div class="row">
                        <div class="col-md-12">

                            <div class="wrapper">
                                {{#each bouteilles}}
                                <section class="sectionlogo">

                                    <div class="col-md-4">
                                        <div class="card">
                                            <input type="checkbox" id="{{_id}}" class="more" aria-hidden="true">
                                            <div class="content">


                                                <div class="front">
                                                    <div class="inner">
                                                        <h2>{{nom}}</h2>
                                                        <label for="{{_id}}" class="button" aria-hidden="true">
                                                            Details
                                                        </label>
                                                        <img class="photo image" src="{{image}}" height="300px">


                                                    </div>
                                                </div>

                                                <section class="back">


                                                    <div class="region">
                                                        <p>REGION :</p>
                                                        <h4>{{region}}</h4>
                                                    </div>

                                                    <div class="annee">
                                                        <p>Année :</p>
                                                        <h4>{{annee}}</h4>
                                                    </div>

                                                    <div class="appellation">
                                                        <p>Appellation</p>
                                                        <h4>{{appellation}}</h4>
                                                    </div>


                                                    <div class="avis">
                                                        <p>Avis</p>
                                                        <h4>{{avis}}</h4>
                                                    </div>

                                                    <div class="classement">
                                                        <p>Classement</p>
                                                        <h4>{{classement}}</h4>
                                                    </div>


                                                    <div class="prix">
                                                        <p>Prix :</p>
                                                        <h4>{{prix}}€</h4>
                                                    </div>

                                                    <div class="coeur">
                                                        <a href="/reservation/{{_id}}">
                                                            {{#if reserve}}
                                                            <i class="fas fa-heart fa-2x"></i>
                                                            {{else}}
                                                            <i class="far fa-heart fa-2x"></i>
                                                            {{/if}}
                                                        </a>
                                                    </div>

                                                    <label for="{{_id}}" class="button return" aria-hidden="true">
                                                        <i class="fas fa-arrow-left"></i>
                                                    </label>


                                                </section>


                                            </div>
                                        </div>
                                    </div>
                                </section>
                                {{/each}}
                            </div>
                            <nav aria-label="Page_navigation_example">
                                <ul class="pagination">
                                    <li class="page-item"><a class="page-link"
                                            href="/pagePrincipale/{{dec pageNum}}">Previous</a>
                                    </li>
                                    <li class="page-item"><a class="page-link">{{pageNum}}</a>
                                    </li>
                                    <li class="page-item"><a class="page-link"
                                            href="/pagePrincipale/{{inc pageNum}}">Next</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>